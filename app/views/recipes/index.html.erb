<div class='d-flex justify-content-around align-items-center'>
    <% @recipes.each do |recipe| %>
        <div class='card bg-light' style="width: 18rem;">
            <div class='card-body'>
                <h5 class='card-title mb-3'>
                    <%= recipe.name %>
                </h5>
                <h6 class="card-subtitle mb-3">
                    <p><%= t('index.type') %> : <%= recipe.kind %></p>
                </h6>
                <div class='row'>
                    <div class='col'>
                        <div class='btn btn-primary'>
                            <%= link_to :edit, edit_recipe_path(recipe.id), class: "text-decoration-none text-light" %>
                        </div>
                    </div>
                    <div class='col'>
                        <div class='btn btn-danger'>
                            <%= link_to :delete, recipe_path(recipe), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" }, class: "text-decoration-none text-light" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>