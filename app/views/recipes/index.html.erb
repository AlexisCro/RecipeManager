<div class='d-flex justify-content-around align-items-center flex-wrap'>
  <% @recipes.each do |recipe| %>
    <div class='card bg-light mb-3' style="width: 18rem; height: 200px;">
      <div class='card-body d-flex flex-column justify-content-around'>
        <h5 class='card-title mb-3'>
          <%= recipe.name %>
          <span>
            <%= display_logo_vegetarian(recipe) %>
            <%= display_logo_vegan(recipe) %>
            <%= display_logo_kids_friendly(recipe) %>
          </span>
        </h5>
        <h6 class="card-subtitle mb-3">
          <p><%= t('index.type') %> : <%= recipe.kind %></p>
        </h6>
        <div class='row'>
          <div class='col'>
            <div class='btn btn-primary'>
              <%= link_to :edit, edit_recipe_path(recipe.id), class: "text-decoration-none text-light" %>
            </div>
          </div>
          <div class='col'>
            <div class='btn btn-primary'>
              <%= link_to :show, recipe_path(recipe.id), class: "text-decoration-none text-light" %>
            </div>
          </div>
          <div class='col'>
            <%= button_to :delete, recipe_path(recipe), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Do you really want delete this recipe ?"}, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
